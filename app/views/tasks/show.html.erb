<div>
<div  class= "h1">
<h1> <%= @task.title %> </h1>
</div>
<div  class= "h1">
<p> <%= @task.details %> </p>
</div>
<div  class= "h1">
<p> <%= @task.completed %></p>
</div>
</div>

<div>
<div class = "a">
<%= link_to "Delete task", task_delete_path(@task), method: :delete, data: { confirm: "Are you sure ?"} %>
</div>
